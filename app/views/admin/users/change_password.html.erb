<%= semantic_form_for [:admin, resource], url: change_password_admin_user_path(resource), method: :put do |f| %>
  <%= f.semantic_errors(*f.object.errors.keys) %>
    <%= f.inputs do %>
      <%= f.input :password, label: "New password" %>
      <%= f.input :password_confirmation %>
    <% end %>
  <%= f.actions %>
<% end %>
